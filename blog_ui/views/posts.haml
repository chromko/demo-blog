- unless @posts.nil? or @posts.empty?
  - @posts.each do |elem|
    %div{ id: 'postlist'}
      %div{class: 'panel'}
        %div{class: 'panel-heading'}
          %div{class: 'text-center'}
            %div{class: 'row'}
              %div{class: 'col-sm-9'}
                %h3{class: 'pull-left'} #{elem['title']}
              %div{ class: 'col-sm-3'}
                %h4{class: 'pull-right'}
                  %small
                    %em #{Time.at(elem['timestamp'].to_i).strftime('%d-%m-%Y')}
                    %br #{Time.at(elem['timestamp'].to_i).strftime('%H:%M')}

    %div{class: 'panel-body'} #{elem['text']}
    %div{class: 'panel-footer'}
      - unless elem['tags'].nil? 
        - elem['tags'].split(',').each do |tag|
          %span{class: 'label label-default'} #{tag}
